<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="console">
      <PatternLayout pattern="%d %highlight{%level{length=1} [%t] %logger{1}: %msg%n%throwable}" />
    </Console>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="console" />
    </Root>
  </Loggers>
</Configuration>
